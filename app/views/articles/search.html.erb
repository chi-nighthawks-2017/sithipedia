<% if @articles %>
  <h2>We found this articles for you:</h2>
  <ul>
    <% @articles.each do |article| %>
    <li>
      <%= link_to "#{article.title}", article_path(article.id) %>
      <br>
      <%= (article.body[0..100].gsub(/[\n]/, " ") + "...").html_safe %>
    </li>
    <% end %>
  </ul>
<% else %>
  <p> Sorry, no matches found </p>
<% end %>
