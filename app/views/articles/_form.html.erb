<% if defined?(@errors) %>
  <%= render '/partials/errors', errors: @errors %>
<% end %>

<%= form_for @article do |form| %>
  Title: <%= form.text_field :title %>
  Body: <%= form.text_area :body %>
  Category: <%= form.text_field :category, value: form.object.category.try(:name) %>
  <%= form.submit %>
<% end %>