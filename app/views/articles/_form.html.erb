<!-- = javascript_include_tag Ckeditor.cdn_url -->
<% if defined?(@errors) %>
  <%= render '/partials/errors', errors: @errors %>
<% end %>

<%= form_for @article do |form| %>
  Title: <%= form.text_field :title %>
  <br>
  Body: <%= form.cktext_area :body %>
  Category: <%= form.text_field :category, value: form.object.category.try(:name) %>

  <%= form.radio_button(:published, false) %>
  <%= form.label(:published, "Save as draft.") %>
  <%= form.radio_button(:published, true) %>
  <%= form.label(:published, "Publish!") %>

  <%= form.submit %>
<% end %>
