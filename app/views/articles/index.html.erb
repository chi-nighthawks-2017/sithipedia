<div>
  <h2>Featured Articles:</h2>
  <% @featured_articles[0...5].each do |article| %>
    <ul>
      <li>
        <h3>  <%= link_to "#{article.title}", article_path(article.id) %> </h3>
        <%= article.body[0..100].html_safe %>...
      </li>
    </ul>
  <% end %>
</div>

<div>
  <h2>All Articles:</h2>
  <% @articles.each do |article| %>
    <ul>
      <li>
        <h4> <%= link_to "#{article.title}", article_path(article.id) %> </h4>
        <%= (article.body[0..100].gsub(/[\n]/, " ") + "...").html_safe %>
      </li>
    </ul>
  <% end %>
</div>
