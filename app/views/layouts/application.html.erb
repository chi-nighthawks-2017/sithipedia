<!DOCTYPE html>
<html>
  <head>
    <title>Sithipedia</title>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <h1>Sithipedia</h1>
      <div>
        <%= form_tag("/articles/search", method:"get") do %>
          <%= text_field_tag :request %>
          <%= submit_tag :search %>
        <% end %>
        <%= link_to 'Write an Article', new_article_path %>
      </div>
      <div class="nav">
      <a href="/articles">Home</a> |
      <% if current_user %>
        Signed in as <%= current_user.username %> | <%= link_to "Logout", '/logout' %>
      <% else %>
        <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/users/new' %>
      <% end %>

      </div>
    <%= yield %>
  </body>
</html>
